@page "/counter"


<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<p style="display:@testItem">Alright</p>
<img style="display:@displayimage" src="/images/alright1.jpg" asp-append-version="true">
<img style="display:@displayimage" src="/images/alright2.jpg" asp-append-version="true">
<img style="display:@displayimage" src="/images/alright3.jpg" asp-append-version="true">


@code {
    private int currentCount = 0;

    private string testItem = "none";

    private string displayimage = "none";

    private void IncrementCount()
    {
        
        currentCount++;
        if (currentCount == 2)
        {
            testItem = "block";
        }

    }





}
